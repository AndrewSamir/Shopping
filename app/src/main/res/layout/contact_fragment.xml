<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50FFFF"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/header_bg_15"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="@string/contact_us"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_22px" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/background_linear_empty"
        android:orientation="vertical"
        android:padding="@dimen/_30sdp">

        <TextView
            android:id="@+id/tvContactMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableRight="@drawable/phone"
            android:gravity="right"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_19px"
            tools:ignore="RtlHardcoded"
            tools:text="01295556656" />

        <TextView
            android:id="@+id/tvContactMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableRight="@drawable/mail"
            android:gravity="right"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_19px"
            tools:ignore="RtlHardcoded"
            tools:text="01295556656" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgContactTwitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                android:src="@drawable/twitter" />

            <ImageView
                android:id="@+id/imgContactFacebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/facebook" />

            <ImageView
                android:id="@+id/imgContactInsta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/instgram" />


        </LinearLayout>

    </LinearLayout>
</LinearLayout>