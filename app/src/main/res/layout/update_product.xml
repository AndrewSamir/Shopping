<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.AddProductActivity"
    tools:showIn="@layout/activity_add_product">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/header_bg_6"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_7sdp"
                android:text="@string/update_product"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_22px" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAddProduct"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/icon_attach2" />

            <TextView
                android:id="@+id/tvAddPhoto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:text="أضف صورة"
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/_19px" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableRight="@drawable/icon_attach2"
            android:gravity="center_vertical"
            android:text="أرفق فيديو  (10 ثوانى بحد أقصي)"
            android:textColor="@color/colorTextHint"
            android:textSize="@dimen/_19px"
            android:visibility="gone" />

        <EditText
            android:id="@+id/tvAddProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/background_edit_text_new"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableRight="@drawable/icon_pen"
            android:hint="أسم المنتج"
            android:padding="@dimen/_10sdp" />

        <EditText
            android:id="@+id/tvAddProductCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/background_edit_text_new"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableRight="@drawable/icon_pen"
            android:hint="القسم"
            android:inputType="none"
            android:padding="@dimen/_10sdp" />

        <EditText
            android:id="@+id/tvAddProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/background_edit_text_new"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableRight="@drawable/icon_pen"
            android:hint="سعر المنتج"
            android:padding="@dimen/_10sdp" />

        <EditText
            android:id="@+id/tvAddProductContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/background_edit_text_new"
            android:drawablePadding="@dimen/_10sdp"
            android:drawableRight="@drawable/icon_pen"
            android:gravity="top"
            android:hint="تفاصيل المنتج"
            android:minHeight="@dimen/_80sdp"
            android:padding="@dimen/_10sdp" />

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/button_pink"
            android:text="@string/update_product"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_19px" />
    </LinearLayout>
</ScrollView>