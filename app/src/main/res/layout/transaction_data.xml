<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/header_bg_14"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_22px"
            android:textColor="@color/colorWhite"
            android:text="@string/transaction_data"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtTransactionDataAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/background_edit_register"
            android:drawablePadding="@dimen/_7sdp"
            android:drawableRight="@drawable/icon_yourname"
            android:gravity="right"
            android:hint="@string/enter_amount"
            android:inputType="none"
            android:lines="1"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorBlack"
            android:visibility="visible"
            tools:ignore="RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgTransactionData"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/icon_attach2" />

            <TextView
                android:id="@+id/tvTransactionData"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:text="أضف صورة"
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/_19px" />
        </LinearLayout>

        <Button
            android:id="@+id/btnTransactionData"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_50sdp"
            android:alpha="1"
            android:background="@drawable/background_text_edit_profile"
            android:elevation="@dimen/_5sdp"
            android:enabled="true"
            android:text="@string/confirm_transaction"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/background_linear_empty"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/transaction_done"
            android:textColor="@color/colorTextHint"
            android:textSize="@dimen/_22px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:drawableLeft="@drawable/icon_yes"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="left"
                android:text="@string/yes"
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/_20px"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/_10sdp"
                android:drawableLeft="@drawable/icon_no"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:text="@string/no"
                android:textColor="@color/colorTextHint"
                android:textSize="@dimen/_20px"
                tools:ignore="RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>